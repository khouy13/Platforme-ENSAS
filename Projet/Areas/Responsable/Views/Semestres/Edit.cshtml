@model Projet.Areas.Coordonnateur.Models.Semestre
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}



<div class="row mb-5">
    <!-- Utilisation de la classe "mx-auto" pour centrer la colonne horizontalement -->
    <div class="card shadow p-3 mb-5 bg-white rounded mt-3 custom-card mx-auto" style="max-width: 600px; overflow-y: auto;">
        <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSemestre" />
            <div class="form-group">
                <label asp-for="NomSemestre" class="control-label"></label>
                <input asp-for="NomSemestre" class="form-control" />
                <span asp-validation-for="NomSemestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemaineDebut" class="control-label"></label>
                <input asp-for="SemaineDebut" class="form-control" />
                <span asp-validation-for="SemaineDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemaineFin" class="control-label"></label>
                <input asp-for="SemaineFin" class="form-control" />
                <span asp-validation-for="SemaineFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" href="@Url.Action("Index","Semestres", new { area = "Responsable" })">Annuler</a>

            </div>
        </form>
    </div>
</div>

