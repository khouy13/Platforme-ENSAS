@model IEnumerable<Projet.Areas.Coordonnateur.Models.Semestre>
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}



<div class="text-end mr-1 mb-1">
    <a asp-action="Create" asp-controller="Semestres" asp-area="Responsable" class="btn btn-primary ml-1"><i class="bi bi-plus"></i></a>
</div>
<div class="container">
<div class="table-responsive card shadow bg-white rounded">
    <table class="table col-10 mx-auto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomSemestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemaineDebut)
            </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SemaineFin)
                    </th>
            <th>
                        Date de Début
            </th>
            <th>
                     Date de Fin
            </th>
           
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomSemestre)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.SemaineDebut)
            </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SemaineFin)
                        </td>
            <td>
                            @item.DateDebut.ToString("dd/MM/yyyy")
            </td>
            <td>
                            @item.DateFin.ToString("dd/MM/yyyy")
            </td>
           
                        <td>
                            <a asp-action="Edit" asp-controller="Semestres" asp-area="Responsable" asp-route-id="@item.IdSemestre" class="btn btn-success btn-sm">
                                <i class="bi bi-pencil" style="font-size: 15px;"></i>
                            </a>
                            <a asp-action="Delete" asp-controller="Semestres" asp-area="Responsable" class="btn btn-danger btn-sm " asp-route-id="@item.IdSemestre">
                                <i class="bi bi-trash-fill" style="font-size: 15px;"></i>
                            </a>
                        </td>
           
        </tr>
}
    </tbody>
</table>
</div>
</div>