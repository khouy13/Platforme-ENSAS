@model Projet.Areas.Responsable.Models.Niveau
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-3">
            <div class="card-body">
                <h3 class="card-subtitle text-center text-danger">Êtes-vous sûr de vouloir supprimer ceci ?</h3>
                <div class="card-text">
                    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Niveau
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomNiveau)
        </dd>
        <dt class = "col-sm-2">
         Filiere
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filiere.NomFiliere)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdNiveau" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> 
        <a class="btn btn-secondary ml-2" href="@Url.Action("Index", "Niveaux", new { area = "Responsable" })">Annuler</a>
    </form>
</div>
            </div>
        </div>
    </div>
</div>
