@model IEnumerable<Projet.Areas.Admin.Models.Departement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
<div class="text-end">
   
    <a asp-action="Create" asp-controller="Departements" asp-area="Responsable" class="btn btn-primary ml-1"><i class="bi bi-plus"></i></a>
</div>
<div class="table-responsive card shadow bg-white rounded">
    <table class="table col-10 mx-auto">
    <thead>
        <tr>
            <th></th>
            <th>
               Departement
            </th>
            <th>Chef</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.IdDepartement)</td>
                   
                    
                    <td>
                @Html.DisplayFor(modelItem => item.NomDepartementt)
                   </td>
                    <td>
                        @(item.ApplicationUser != null ? item.ApplicationUser.NomComplet : "")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Departements" asp-area="Responsable" asp-route-id="@item.IdDepartement" class="btn btn-success btn-sm">
                            <i class="bi bi-pencil" style="font-size: 15px;"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Departements" asp-area="Responsable" class="btn btn-danger btn-sm" asp-route-id="@item.IdDepartement">
                            <i class="bi bi-trash-fill" style="font-size: 15px;"></i>
                        </a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>