@model Projet.Areas.Responsable.Models.Groupe
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}


<div class="row mb-5">
    <!-- Utilisation de la classe "mx-auto" pour centrer la colonne horizontalement -->
    <div class="card shadow p-3 mb-5 bg-white rounded mt-3 custom-card mx-auto" style="max-width: 600px; overflow-y: auto;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGroupe" />
            <div class="form-group">
                <label asp-for="NomGroup" class="control-label"></label>
                <input asp-for="NomGroup" class="form-control" />
                <span asp-validation-for="NomGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNiveau" class="control-label"></label>
                <select asp-for="IdNiveau" class="form-control" asp-items="ViewBag.IdNiveau"></select>
                <span asp-validation-for="IdNiveau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-secondary" href="@Url.Action("Index", "Filieres", new { area = "Responsable" })">Annuler</a>
            </div>
        </form>
        </div>
    </div>

</div>
