@model Projet.Areas.Responsable.Models.Grade

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <!-- Utilisation de la classe "mx-auto" pour centrer la colonne horizontalement -->
    <div class="card shadow p-3 mb-5 bg-white rounded mt-3 custom-card mx-auto" style="max-width: 600px; overflow-y: auto;">
        <div class="card-body">
            <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradeName" class="control-label"></label>
                <input asp-for="GradeName" class="form-control" />
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeNomComplet" class="control-label"></label>
                <input asp-for="GradeNomComplet" class="form-control" />
                <span asp-validation-for="GradeNomComplet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
                  <a class="btn btn-secondary ml-2" href="@Url.Action("Index","Grades", new { area = "Responsable" })">Annuler</a>

            </div>
        </form>
    </div>
</div>

