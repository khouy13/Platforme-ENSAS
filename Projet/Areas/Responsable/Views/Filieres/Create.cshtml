@model Projet.Areas.Responsable.Models.Filiere

@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Projet.Areas.Responsable.Models
@{
    ViewData["Title"] = "Create";
    
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";

}



<div class="row">
    <!-- Utilisation de la classe "mx-auto" pour centrer la colonne horizontalement -->
    <div class="card shadow p-3 mb-5 bg-white rounded mt-3 custom-card mx-auto" style="max-width: 600px; overflow-y: auto;">
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="NomFiliere" class="control-label">Filiere</label>
                <input asp-for="NomFiliere" class="form-control" type="text" required/>
                <span asp-validation-for="NomFiliere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="IdDepartement" class="form-select form-select-sm" aria-required="true" required>
                    <option  selected value="">Département</option>
                    @foreach (var dep in ViewBag.Departements)
                    {

                        <option value="@dep.IdDepartement"> @dep.NomDepartementt</option>
                    }

                </select>
                <span asp-validation-for="IdDepartement" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <select asp-for="ApplicationUserId" class="form-select form-select-sm" aria-required="true">
                    <option disabled selected value="">Coordonnateur</option>
                    @foreach (var dep in ViewBag.Coordenateur)
                    {

                        <option value="@dep.Id">@dep.FirstName  @dep.LastName</option>
                    }

                </select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
                <a class="btn btn-secondary ml-2" href="@Url.Action("Index", "Filieres", new { area = "Responsable" })">Annuler</a>
            </div>
        </form>
    </div>
</div>



</div>
   