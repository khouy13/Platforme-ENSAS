@model Projet.Areas.Responsable.Models.Matiere
@addTagHelper *,AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}



<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-3">
            <div class="card-body">
                <h3 class="card-subtitle text-center text-danger">Êtes-vous sûr de vouloir supprimer ceci ?</h3>
                <div class="card-text">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Matiére:</dt>
                        @Html.DisplayFor(model => model.NomMatiere)
                        <dt class="col-sm-2">Niveau:</dt>
                        @if (Model.MatiereNiveaus != null)
                        {
                            foreach (var n in Model.MatiereNiveaus)
                            {
                                @n.Niveau.NomNiveau
                                <br />
                            }
                        }
                       
                    </dl>
                    <form asp-action="Delete" class="text-center mt-3 d-flex justify-content-end">
                        <input type="hidden" asp-for="IdMatiere" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-secondary ml-2" href="@Url.Action("First", "Matieres", new { area = "Responsable" })">Annuler</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>