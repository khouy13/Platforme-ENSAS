
@model IEnumerable<Projet.Areas.Admin.Models.Enseignant>

@using Projet.Areas.Responsable.Models;
   
@addTagHelper *,AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
else if (User.IsInRole("Directeur"))
{
    Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml";
}
else if (User.IsInRole("Coordonnateur"))
{
    Layout = "~/Areas/Coordonnateur/Views/Shared/_CordDashbord.cshtml";
}
else if (User.IsInRole("Chef"))
{

    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";

}

@{

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<style>
    .clear-search {
        cursor: pointer;
        display: none;
        padding: 6px 10px;
        border-radius: 0 4px 4px 0;
        background-color: #ccc;
        border: 1px solid #ccc;
        border-left: none;
    }
</style>

<div class="container ">
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <span class="container d-flex justify-content-end">
    <span class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </span>
    </span>


}

    <div class="container">
        <div class="row mb-2">
            <div class="col-md-3">
         @if (User.IsInRole("Admin"))
            {
                <form method="post" enctype="multipart/form-data" asp-action="ImportAndStoreEnseignants" asp-controller="Enseignants" asp-area="Responsable">

            <div class="form-group">
                <div class="input-group">
                    <label class="btn btn-primary" style="height: 40px; line-height: 38px; padding-top: 0; padding-bottom: 0;">
                        Parcourir <input type="file" style="display: none;" name="file" accept=".xlsx, .xls">
                    </label>
                  
                    <button type="submit" class="btn btn-primary ml-2 " style="height: 38px">Enregistrer</button>
                </div>
            </div>
            </form>
        }

            </div>
          
            <div class="col-md-3">
                @if (User.IsInRole("Admin") || User.IsInRole("Directeur")){
            <form method="get" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" class="form-inline w-100">
                    <div class="input-group w-100">
                        <select name="DId" class="form-control" asp-items="ViewBag.Departements">
                            <option value="">Departement</option>
                        </select>

                   
                        <span id="clearSearch" class="input-group-addon clear-search">&times;</span>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">filter</button>
                        </div>
                    </div>
                </form>
                }
        </div>
            <div class="col-md-3">

                <form method="get" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" class="form-inline w-100">
                    <div class="input-group w-100">
                        <select name="GId" class="form-control" asp-items="ViewBag.Grades ">
                            <option value="">Grade</option>
                        </select>

                        @if (User.IsInRole("Coordonnateur")||User.IsInRole("Chef"))
                        {
                            <input name="DId" type="hidden" value="@ViewBag.Dept" />
                        }
                        <span id="clearSearch" class="input-group-addon clear-search">&times;</span>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">filter</button>
                        </div>
                    </div>
                </form>

            </div>


            <div class="col-md-3">

                <form method="get" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" class="form-inline w-100">
                    <div class="input-group w-100">
                        <select name="EId" class="form-control" asp-items="ViewBag.enseignants2">
                            <option value="">Enseignant</option>
                        </select>
                        @if (User.IsInRole("Coordonnateur") || User.IsInRole("Chef"))
                        {
                            <input name="DId" type="hidden" value="@ViewBag.Dept" />
                        }
                        <span id="clearSearch" class="input-group-addon clear-search">&times;</span>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>


                            <a class="btn btn-primary ml-2" asp-controller="Enseignants" asp-action="Create" asp-area="Responsable" asp-route-DId="@ViewBag.Dept"><i class="bi bi-plus"></i></a>

                        </div>

                    </div>
                </form>
            </div>
</div>
   <div class="card bg-white shadow " >
         <div class="card-body border-white">
            <div class="table-responsive">
        <table class="table table-bordered" >
            <thead>
                <tr>
                    <th>Nom Complet</th>
                    <th>Email</th>
                    <th>Spécialité</th>
                    <th>Département</th>
                    <th>Grade</th>
                    <th>Emploi</th>
                    
                        <th>Action</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomComplet</td>
                        <td>@item.Email</td>
                        <td>@item.SpecialiteEnseignant</td>
                                    <td>
                                    @if (@item.departement != null)
                                    {
                                        @item.departement.NomDepartementt
                                    }

                                    </td>
                        <td>
                                        @if (@item.gradeEnseigant != null)
                                        {
                                            @item.gradeEnseigant.GradeName
                                        }
                                       </td>
                          <td>
                                <a asp-controller="Enseignants" asp-area="Responsable" asp-action="EmploiEnseignant" asp-route-IdEns="@item.IdEnseignant" class="btn  btn-light btn-sm"> <i class="bi bi-calendar" style="font-size: 15px;color:cornflowerblue"></i></a>
                            </td>
                       
                        
                            <td>
                                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Enseignants" asp-area="Responsable" asp-route-id="@item.IdEnseignant" asp-route-DId="@ViewBag.Dept">
                                <i class="bi bi-pencil"></i>
                            </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Enseignants" asp-area="Responsable" asp-route-id="@item.IdEnseignant" asp-route-DId="@ViewBag.Dept">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    </div>
    <div class="d-flex justify-content-end mb-5 mt-2">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                            <a class="page-link text-primary" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" asp-route-pg="1" asp-route-DId="@ViewBag.Dept" asp-route-GId="@ViewBag.GId">First</a>
                    </li>
                    <li class="page-item">
                            <a class="page-link text-primary" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.CurrentPage - 1)" asp-route-DId="@ViewBag.Dept" asp-route-GId="@ViewBag.GId">Previous</a>
                    </li>
                }
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active text-white" : "text-primary")">
                            <a class="page-link" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" asp-route-pg="@pge" asp-route-DId="@ViewBag.Dept" asp-route-GId="@ViewBag.GId">@pge</a>
                    </li>
                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                            <a class="page-link text-primary" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.CurrentPage + 1)" asp-route-DId="@ViewBag.Dept" asp-route-GId="@ViewBag.GId">Next</a>
                    </li>
                    <li class="page-item">
                            <a class="page-link text-primary" asp-controller="Enseignants" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.TotalPages)" asp-route-DId="@ViewBag.Dept" asp-route-GId="@ViewBag.GId">Last</a>
                        </li>
                }
            </ul>
        }
    </div>
</div>
