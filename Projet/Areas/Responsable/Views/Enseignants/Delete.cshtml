@model Projet.Areas.Admin.Models.Enseignant;
@addTagHelper *,AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
else if (User.IsInRole("Directeur"))
{
    Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml";
}
else if (User.IsInRole("Coordonnateur"))
{
    Layout = "~/Areas/Coordonnateur/Views/Shared/_CordDashbord.cshtml";
}
else if (User.IsInRole("Chef"))
{

    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";

}


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-3">
            <div class="card-body">
                <h3 class="card-subtitle text-center text-danger">Êtes-vous sûr de vouloir supprimer ceci ?</h3>
                <div class="card-text">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Nom:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NomEnseignant)</dd>
                        <dt class="col-sm-3">Prénom:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.PrenomEnseignant)</dd>
                        <dt class="col-sm-3">Spécialité:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SpecialiteEnseignant)</dd>
                        <dt class="col-sm-3">Département:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.departement.NomDepartementt)</dd>
                        <dt class="col-sm-3">Grade:</dt>
                       
                    </dl>
                    <form asp-action="Delete" class="text-center mt-3 d-flex justify-content-end">
                        <input type="hidden" asp-for="IdEnseignant" />
                        <input type="submit" value="Supprimer" class="btn btn-danger" />
                        <a class="btn btn-secondary ml-2" href="@Url.Action("First", "Enseignants", new { area = "Responsable" })">Annuler</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
