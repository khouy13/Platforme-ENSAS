@model Projet.Areas.Coordonnateur.Models.Local
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
  
}
@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
else if (User.IsInRole("Directeur"))
{
    Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml";
}
else if (User.IsInRole("Coordonnateur"))
{
    Layout = "~/Areas/Coordonnateur/Views/Shared/_CordDashbord.cshtml";
}
else if (User.IsInRole("Chef"))
{

    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";

}

<div class="row mb-5">
   
    <div class="card shadow p-3 mb-5 bg-white rounded mt-3 custom-card mx-auto" style="max-width: 600px; overflow-y: auto;">
        <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLocal" />
            <div class="form-group">
                <label asp-for="NomLocal" class="control-label"></label>
                <input asp-for="NomLocal" class="form-control" />
                <span asp-validation-for="NomLocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapaciteLocal" class="control-label"></label>
                <input asp-for="CapaciteLocal" class="form-control" />
                <span asp-validation-for="CapaciteLocal" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <select asp-for="IdTypeLocal" class="form-control" asp-items="ViewBag.typeLocals">
                        <option value=""> Type du Local </option>
                    </select>
                </div>
            <div class="form-group">
                <label asp-for="DescriptionLocal" class="control-label"></label>
                <input asp-for="DescriptionLocal" class="form-control" />
                <span asp-validation-for="DescriptionLocal" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    <a class="btn btn-secondary ml-2" href="@Url.Action("First", "Locals", new { area = "Responsable" })">Annuler</a>
                </div>
            </form>
        </div>
    </div>

