@model IEnumerable<Projet.Areas.Coordonnateur.Models.Local>
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Projet.Areas.Responsable.Models;


            @if (User.IsInRole("Admin"))
            {
                Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
            }
            else if (User.IsInRole("Directeur"))
            {
                Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml"; 
            }
            else if (User.IsInRole("Secritaire"))
            {
                 Layout = "~/Areas/Secritaire/Views/Shared/_Secritaire.cshtml";
            }
@{
    
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<style>
    .clear-search {
        cursor: pointer;
        display: none;
        padding: 6px 10px;
        border-radius: 0 4px 4px 0;
        background-color: #ccc;
        border: 1px solid #ccc;
        border-left: none;
    }
</style>

<div class="container">
    <div class="row mb-2">
        <div class="col-md-8"></div>
        <div class="col-md-4 text-end">

                <form  method="get" asp-controller="Locals" asp-action="First" asp-area="Responsable" class="form-inline">
                    <div class="input-group w-100">
                    <select name="LId" class="form-control" asp-items=" ViewBag.locals2">
                            <option value="">Locals</option>
                        </select>


                        <span id="clearSearch" class="input-group-addon clear-search">&times;</span>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                        @if (User.IsInRole("Admin") || User.IsInRole("Directeur")){
                            <a asp-action="Create" asp-controller="Locals" asp-area="Responsable" class="btn btn-primary ml-1"><i class="bi bi-plus"></i></a>
                        }
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class="table-responsive card shadow bg-white rounded">
        <table class="table col-10 mx-auto">
            
    <thead>
        <tr>
            <th class="ml-3">
               Local
            </th>
               
            <th>
                Capacité
            </th>
                <th>
                  Type Du Local
                </th>
            <th>
              Description
            </th> 
            <th>
             Emploi Du Local
            </th>
                <th>Emploi Local Durant Les Examens</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("Directeur")){
            <th>Action</th>

                        }  
                       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="ml-3">
                @Html.DisplayFor(modelItem => item.NomLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapaciteLocal)
            </td>
                    <td>
                        @if (item.TypeLocal!=null)
                        {
                            @Html.DisplayFor(modelItem => item.TypeLocal.Nom)
                        }
                       
                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionLocal)
            </td>
             <td>
                        <a asp-controller="Locals" asp-action="EmploiLocal" asp-area="Responsable" asp-route-idL="@item.IdLocal" class="btn  btn-light btn-sm"> <i class="bi bi-calendar" style="font-size: 15px;color:cornflowerblue"></i></a>
             
                            
             </td>
                    <td>
                        <a asp-action="ExamEmploiLocal" asp-controller="Locals" asp-area="Responsable" asp-route-idL="@item.IdLocal" class="btn  btn-light btn-sm"> <i class="bi bi-calendar" style="font-size: 15px;color:cornflowerblue"></i></a>


                    </td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Directeur"))
                    {
                        <td>
                            <a asp-action="Edit" asp-area="Responsable" asp-controller="Locals" asp-route-id="@item.IdLocal" class="btn btn-success btn-sm"> <i class="bi bi-pencil" style="font-size: 12px;"></i></a>

                        <a asp-action="Delete" asp-area="Responsable" asp-controller="Locals"  asp-route-id="@item.IdLocal" class="btn btn-danger btn-sm"> <i class="bi bi-trash-fill" style="font-size: 12px;"></i></a>
           
         </td>}
        </tr>
}
    </tbody>
</table>
</div>

    <div class="d-flex justify-content-end mt-2">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link text-primary" asp-controller="Locals" asp-action="First" asp-area="Responsable" asp-route-pg="1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link text-primary" asp-controller="Locals" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                    </li>
                }
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active text-white" : "text-primary")">
                        <a class="page-link" asp-controller="Locals" asp-action="First" asp-area="Responsable" asp-route-pg="@pge">@pge</a>
                    </li>
                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link text-primary" asp-controller="Locals" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                    </li>
                    <li class="page-item">
                    <a class="page-link text-primary" asp-controller="Locals" asp-action="First" asp-area="Responsable" asp-route-pg="@(pager.TotalPages)" >Last</a>
                    </li>
                }
            </ul>
        }
    </div>
</div>
