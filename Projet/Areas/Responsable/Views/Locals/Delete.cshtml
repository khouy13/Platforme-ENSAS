@model Projet.Areas.Coordonnateur.Models.Local
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
  
}
@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
else if (User.IsInRole("Directeur"))
{
    Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml";
}
else if (User.IsInRole("Coordonnateur"))
{
    Layout = "~/Areas/Coordonnateur/Views/Shared/_CordDashbord.cshtml";
}
else if (User.IsInRole("Chef"))
{

    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";

}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-3">
            <div class="card-body">
                <h3 class="card-subtitle text-center text-danger">Êtes-vous sûr de vouloir supprimer ceci ?</h3>
                <div class="card-text">
                    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
           Local
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.NomLocal)
        </dd>
                        <dt class="col-sm-3">
            Capacité
        </dt>
                        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CapaciteLocal)
        </dd>
                        <dt class="col-sm-3">
           Description
        </dt>
         <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DescriptionLocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLocal" />
        <input type="submit" value="supprimer" class="btn btn-danger" /> 
                        <a class="btn btn-secondary ml-2" href="@Url.Action("First", "Locals", new { area = "Responsable" })">Annuler</a>
    </form>
</div>
            </div>
        </div>
    </div>
</div>
