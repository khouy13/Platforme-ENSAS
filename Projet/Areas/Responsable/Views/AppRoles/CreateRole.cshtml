@using Microsoft.AspNetCore.Identity;
@model IdentityRole;
@addTagHelper *,AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Responsable/Views/Shared/_Admin.cshtml";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                   
                    <form method="post" asp-action="CreateRole">
                        <h2 class="title text-center mb-4">Application Roles</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                        <div class="form-group">
                            <label asp-for="Name" class="display-4"> rôle </label>
                            <input type="text" class="form-control" id="Name" asp-for="Name" aria-required="true">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex">
                            <button  type="submit" class="btn btn-primary  me-2" style="">Save</button>
                            <button type="button" class="btn btn-secondary ">Cancel</button>
                        </div>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</div>
