@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.EntityFrameworkCore
@using System.Linq
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using Projet.Data 
@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Projet.Data.AppDbContext _context

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var user = _context.Users.FirstOrDefault(u => u.Id == userId);
    if (user.IdEnseignant!=null)
    {
        <li class="nav-item"><a asp-action="EmploiSurveillance"  asp-area="Professeur" asp-controller="Prof" asp-route-IdEns="@user.IdEnseignant" class="nav-link">Emploi Surveillance</a></li>

    }

    else if (user.IdVacataire!= null)
    {
        <li class="nav-item"><a asp-action="EmploiSurveillance"  asp-area="Professeur" asp-controller="Prof" asp-route-IdVac="@user.IdVacataire" class="nav-link">Emploi Surveillance</a></li>

    }
}



        
                
                
           
   

