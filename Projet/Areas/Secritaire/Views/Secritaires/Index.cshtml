                        <figure class="avatar mx-auto mb-4 mb-md-0">
                            <i class="bi bi-houses-fill text-white" style="font-size:25px"></i>
                        </figure>
                    </div>
                    <div class="col-md-8">
                        <p class="text-white text-center text-md-left"><strong>SALLES</strong></p>
                        <p class="text-white text-center text-md-left"></p>
                        <div class="d-flex align-items-center justify-content-between info pt-2">
                            <div class="text-center" style="text-align:center;">

                                <span data-purecounter-start="0" data-purecounter-end="@ViewBag.SalleCount" data-purecounter-duration="1" class="purecounter text-white"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card">
        <div class="card profile-card bg-primary">
            <div class="card-body">
                <div class="row align-items-center h-100">
                    <div class="col-md-4">
                        <figure class="avatar mx-auto mb-4 mb-md-0">
                            <i class="bi bi-houses-fill text-white" style="font-size:25px"></i>
                        </figure>
                    </div>
                    <div class="col-md-8">
                        <p class="text-white text-center text-md-left"><strong>ATELLIERS</strong></p>
