  @{
    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";
  }


<div class="row mb-2">
    <div class="col-md-6 stretch-card">
        <div class="card profile-card bg-gradient-white" style="background-color:#0a73f7;">
            <div class="card-body">
                <div class="row align-items-center h-100">
                    <div class="col-md-4">
                        <figure class="avatar mx-auto mb-4 mb-md-0">
                            <i class="bi bi-people text-white" style="font-size:25px"></i>
                        </figure>
                    </div>
                    <div class="col-md-8">
                        <h5 class="text-white text-center text-md-left">Nombre d'Enseignants</h5>
                        <p class="text-white text-center text-md-left"></p>
                        <div class="d-flex align-items-center justify-content-between info pt-2">
                            <div class="text-center">

                                <span data-purecounter-start="0" data-purecounter-end="@ViewBag.NbEnseignant" data-purecounter-duration="1" class="purecounter text-white"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 stretch-card">
        <div class="card profile-card bg-gradient-primary">
            <div class="card-body">
                <div class="row align-items-center h-100">
                    <div class="col-md-4">
                        <figure class="avatar mx-auto mb-4 mb-md-0">
                            <i class="bi bi-people text-white" style="font-size:25px"></i>
                        </figure>
                    </div>
                    <div class="col-md-8">
                        <h5 class="text-white text-center text-md-left">Nombre de Vacataires</h5>
                        <p class="text-white text-center text-md-left"></p>
                        <div class="d-flex align-items-center justify-content-between info pt-2">
                            <div class="text-center" style="text-align:center;">

                                <span data-purecounter-start="0" data-purecounter-end="@ViewBag.NbVacataires" data-purecounter-duration="1" class="purecounter text-white"></span>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                              
                                <th scope="col" class="custom-light-blue">Filière</th>
                                <th scope="col" class="custom-blue"></th>
                                <th scope="col" class="custom-dark-blue">Coordonnateur</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var filiere in ViewBag.filiere)
                            {
                                <tr class="@(filiere.ApplicationUser != null && filiere.ApplicationUser.Enseignant != null ? "even-row" : "odd-row")">
                                    <td>
                                        @filiere.NomFiliere
                                    </td>
                                    <td class="py-1">
                                        @if (filiere.ApplicationUser != null && !string.IsNullOrEmpty(filiere.ApplicationUser.ImagePath))
                                        {
                                            <img src="/@filiere.ApplicationUser.ImagePath" alt="Image du coordinateur" />
                                        }
                                    </td>
                                    <td>
                                        @if (filiere.ApplicationUser != null)
                                        {
                                            @filiere.ApplicationUser.NomComplet
                                        }
                                    </td>
                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>