@model Projet.Areas.Coordonnateur.Models.Message;

@addTagHelper *, AuthoringTagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (User.IsInRole("Coordonnateur"))
{
    Layout = "_CordDashbord";
}
else if (User.IsInRole("Directeur"))
{
    Layout = "~/Areas/Directeur/Views/Shared/_Directeur.cshtml";
}
else if (User.IsInRole("Chef"))
{

    Layout = "~/Areas/Chef/Views/Shared/_Chef.cshtml";

}


<div class="container">
    
    @if (TempData["message"]!=null)
    {   
       <div class="alert alert-success">
            @TempData["message"];
      </div>
    }
    \
    <div class="row justify-content-center">
    
        <div class="col-md-8 bg-white shadow rounded" style="padding-left:100px !important">
            <form id="registerForm" method="post" asp-action="ActiveDesactiveNotification" >
                <div class="form-check form-switch">
                    <input class="form-check-input"  asp-for="IsMessageActive"  type="checkbox" role="switch" id="ch">
                    <label class="form-check-label" for="ch">Notification</label>
                </div>
            </form>
        </div>
        
    </div>
</div>

@section Scripts {
  <script>
       document.getElementById('ch').addEventListener('change', function () {
          document.getElementById('registerForm').submit();
       });
  </script>
}
